{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["BROWSER_CHANNEL", "HEADLESS"],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ],
      "env": ["NEXT_PUBLIC_*"]
    },
    "lint": {
      "outputs": []
    },
    "fmt": {
      "cache": false
    },
    "start": {
      "cache": true
    },
    "dev": {
      "cache": false
    },
    "watch": {
      "cache": false
    }
  }
}
